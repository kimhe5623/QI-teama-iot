                                <script type="text/javascript">
                                    $("#changepwd-form").submit(function(){

                                        var pd1 = $("#changenpwd").val();
                                        var pd2 = $("#changecpwd").val();
                                        var charcount = 0;

                                        for(var i = 0; i < pd1.length; i++) {
                                            if(pd1[i]>="A" && pd1[i]<='z') {
                                                charcount++;
                                            }
                                        }

                                        if(charcount<2) {
                                            alert("You must contain two characters at least");
                                            return false;
                                        }

                                        if(pd1!=pd2) {
                                            alert("Password is wrong");
                                            return false;
                                        }

                                        var data = {
                                            pwd : pd1
                                        };

                                        $.ajax({
                                            type: "POST",
                                            url: "/changepwd",
                                            data: JSON.stringify(data),
                                            success: function (response) {

                                                var res = JSON.parse(response);

                                                if (res['status'] == true) {
                                                    alert("Password change is successful");
                                                    window.location = '/';
                                                }
                                                else
                                                    alert(res['message']);
                                            }
                                        });

                                        return false;

                                    });
                                </script>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
