                                            <label>New Password</label>
                                            <input type="password" id="changenpwd" class="form-control" placeholder="New Password" pattern="[A-Za-z0-9]{6,10}" maxlength="10" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <input type="password" id="changecpwd" class="form-control" placeholder="Confirm Password" pattern="[A-Za-z0-9]{6,10}" maxlength="10" required>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info btn-fill pull-left">SUBMIT</button>
