    <script>
        function generateChartData() {
            deleteMarkers();
            chartData = [];
            var date = {
                fdate : $("#fdate").val(),
                ldate : $("#ldate").val()
            };
            $.ajax({
                type: "POST",
                url: "/aqi",
                data: JSON.stringify(date),

                success: function (response) {

                    var res = JSON.parse(response);

                    if (res['status'] == true) {
                        arr = res['data'];
                        count = arr.length;

                        for (var i = 0; i < count; i++) {
                            var ts = arr[i]['TS'].split(" ");
                            var ymd = ts[0].split("-");
                            var hm = ts[1].split(":");
                            var middle = ymd[1] - 1;
                            var pm25 = Math.round(arr[i]['PM2.5']);
                            var o3 = Math.round(arr[i]['O3']);
                            var no2 = Math.round(arr[i]['NO2']);
                            var co = Math.round(arr[i]['CO']);
                            var so2 = Math.round(arr[i]['SO2']);
                            var tem = Math.round(arr[i]['Temperature']);

                            var newDate = new Date(ymd[0], middle, ymd[2], hm[0], hm[1], hm[2]);

                            chartData.push({
                                date: newDate,
                                pm25: pm25,
                                o3: o3,
                                no2: no2,
                                co: co,
                                so2: so2,
                                tem: tem
                            });
                        }

                        chart = AmCharts.makeChart("chartdiv", {
                            type: "serial",
                            legend: {
                                equalWidths: false,
                                useGraphSettings: true,
                                valueAlign: "left",
                                valueWidth: 20
                            },
                            dataProvider: chartData,
                            dataDateFormat: "YY-MM-DD JJ:NN:SS",
                            categoryField: "date",
                            categoryAxis: {
                                minPeriod: "ss",
                                parseDates: true,
                                gridAlpha: 0.15,
                                minorGridEnabled: true,
                                axisColor: "#DADADA",
                                title: "Date"
                            },
                            valueAxes: [{
                                axisAlpha: 0.2,
                                id: "v1",
                                title: "AQI"
                            },{
                                axisAlpha: 0.2,
                                position: "right",
                                id: "v2",
                                title: "Temperature",
                                unit: " ℉"
                            }],
                            graphs: [{
                                title: "PM2.5",
                                id: "g1",
                                valueAxis: "v1",
                                valueField: "pm25",
                                bullet: "round",
                                bulletBorderColor: "#FFFFFF",
                                bulletBorderAlpha: 1,
                                lineThickness: 1,
                                lineColor: "#93DAFF",
                                negativeLineColor: "#0352b5",
                                balloonText: "[[category]]<br><b><span style='font-size:14px;'>PM2.5: [[value]]</span></b>"
                            },{
                                title: "O3",
                                id: "g2",
                                valueField: "o3",
                                bullet: "round",
                                bulletBorderColor: "#FFFFFF",
                                bulletBorderAlpha: 1,
                                lineThickness: 1,
                                lineColor: "#FFDC3C",
                                negativeLineColor: "#b5030d",
                                balloonText: "[[category]]<br><b><span style='font-size:14px;'>O3: [[value]]</span></b>"
                            },{
                                title: "NO2",
                                id: "g3",
                                valueField: "no2",
                                bullet: "round",
                                bulletBorderColor: "#FFFFFF",
                                bulletBorderAlpha: 1,
                                lineThickness: 1,
                                lineColor: "#FFB6C1",
                                negativeLineColor: "#b5030d",
                                balloonText: "[[category]]<br><b><span style='font-size:14px;'>NO2: [[value]]</span></b>"
                            },{
                                title: "CO",
                                id: "g4",
                                valueField: "co",
                                bullet: "round",
                                bulletBorderColor: "#FFFFFF",
                                bulletBorderAlpha: 1,
                                lineThickness: 1,
                                lineColor: "#3DFF92",
                                negativeLineColor: "#b5030d",
                                balloonText: "[[category]]<br><b><span style='font-size:14px;'>CO: [[value]]</span></b>"
                            },{
                                title: "SO2",
                                id: "g5",
                                valueField: "so2",
                                bullet: "round",
                                bulletBorderColor: "#FFFFFF",
                                bulletBorderAlpha: 1,
                                lineThickness: 1,
                                lineColor: "#D36EEC",
                                negativeLineColor: "#b5030d",
                                balloonText: "[[category]]<br><b><span style='font-size:14px;'>SO2: [[value]]</span></b>"
                            },{
                                title: "Temperature",
                                id: "g6",
                                valueAxis: "v2",
                                valueField: "tem",
                                bullet: "round",
                                bulletBorderColor: "#FFFFFF",
                                bulletBorderAlpha: 1,
                                lineThickness: 1,
                                lineColor: "#FF6464",
                                negativeLineColor: "#b5030d",
                                balloonText: "[[category]]<br><b><span style='font-size:14px;'>Temperature: [[value]]℉</span></b>"
                            }],
                            chartCursor: {
                                fullWidth: true,
                                categoryBalloonDateFormat: "YY-MM-DD JJ:NN",
                                valueLineBalloonEnabled: true,
                                cursorAlpha: 0.1
                            },
                            chartScrollbar: {
                                scrollbarHeight: 40,
                                color: "#FFFFFF",
                                autoGridCount: true
                            },

                            mouseWheelZoomEnabled: true
                        });

                        chart.addListener("dataUpdated", zoomChart);

                        chart.addListener("clickGraphItem", function(event) {
                            resetMarkers();
                            if (event.index === undefined)
                                return;
                            highlightMarker(chart.dataProvider[event.index].marker);
                        });

                        chart.addListener("init", function() {
                            chart.chartCursor.addListener("onHideCursor", function() {
                                resetMarkers();
                            });
                        });

                        initMap();
                        google.maps.event.addDomListener(window, 'load', initMap);
                    }
                }
            });
