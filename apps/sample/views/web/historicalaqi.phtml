        function zoomChart() {
            // different zoom methods can be used - zoomToIndexes, zoomToDates, zoomToCategoryValues
            chart.zoomToIndexes(chartData.length - 40, chartData.length - 1);
        }

        function initMap() {
            var mapOptions = {
                zoom : 18,
                center : new google.maps.LatLng(arr[count-1]['LAT'],arr[count-1]['LNG'])
            };

            map = new google.maps.Map(document.getElementById('map'),mapOptions);

            var points = [];
            for (var i = 0; i < chart.dataProvider.length; i++) {
                var dp = chart.dataProvider[i];
                points.push(new google.maps.LatLng(arr[i].LAT, arr[i].LNG));
                dp.marker = addMarker(points[i], i);
            }

            /*var markerCluster = new MarkerClusterer(map, markers,
                {imagePath: 'https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m'});*/
        }

        function addMarker(points, id) {
            var pm25 = Math.round(arr[id]['PM2.5']);
            var o3 = Math.round(arr[id]['O3']);
            var no2 = Math.round(arr[id]['NO2']);
            var co = Math.round(arr[id]['CO']);
            var so2 = Math.round(arr[id]['SO2']);
            var tem = Math.round(arr[id]['Temperature']);
            var aqiarr = [pm25, o3, no2, co, so2];

            var str = arr[id]['TS'] + " PM2.5 : " + pm25 + ", O3 : " + o3 + ", NO2 : " + no2 + ", CO : " + co + ", SO2 : " + so2 + ", Temperature : " + tem + '℉';

            for(var i=0; i<4; i++) {
                if(aqiarr[i] >= aqiarr[i+1]) {
                    aqiarr[i+1] = aqiarr[i];
                }
            }

            var max = aqiarr[4];
            var url;

            if(max >= 0 && max <= 50) {
                url = "images/cloud1.png";
            } else if(max >= 51 && max <=100) {
                url = "images/cloud2.png";
            } else if(max >= 101 && max <=150) {
                url = "images/cloud3.png";
            } else if(max >= 151 && max <=200) {
                url = "images/cloud4.png";
            } else if(max >= 201 && max <=300) {
                url = "images/cloud5.png";
            } else if(max >= 301) {
                url = "images/cloud6.png";
            }

            var marker = new google.maps.Marker({
                title: str,
                position: points,
                icon: {
                    url : url // 마커로 사용할 이미지
                },
                opacity: 0.5,
                map: map,
                draggable: false,
                id: id
            });

            var Circle = new google.maps.Circle({
                strokeColor: '#CCCCCC',
                strokeOpacity: 0.8,
                strokeWeight: 1,
                fillColor: '#FFFFFF',
                fillOpacity: 0.1,
                map: map,
                center: points,
                radius: 50
            });
            Circle.setMap(map);
            
            circles.push(Circle);
            markers.push(marker);

            var contentString = '<div id="content">'+
                '<div id="siteNotice">'+
                '</div>'+
                '<h2 id="firstHeading" class="firstHeading">AQI</h2>'+
                '<div id="bodyContent">'+
                '<p>Date : ' + arr[id]['TS'] +
                '<br>PM2.5 : ' + pm25 +
                '<br>O3 : ' + o3 +
                '<br>NO2 : ' + no2 +
                '<br>CO : ' + co +
                '<br>SO2 : ' + so2 +
                '<br>Temperature : ' + tem + '℉</p>' +
                '</div>'+
                '</div>';


            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            google.maps.event.addListener(marker, 'click', function() {
                infowindow.open(map,marker);
            });
            google.maps.event.addListener(marker, 'mouseover', function() {
                resetMarkers();
                maphighlightMarker(this);
                chart.chartCursor.showCursorAt(chart.chartData[this.id].category);
            });
            google.maps.event.addListener(marker, 'mouseout', function() {
                resetMarkers();
                chart.chartCursor.hideCursor();
            });

            return marker;
        }

        function highlightMarker(marker) {
            marker.setOpacity(1);
            map.panTo(marker.getPosition());
        }

        function maphighlightMarker(marker) {
            marker.setOpacity(1);
            highlight = marker;
        }

        function getMarkers() {
            return chart.dataProvider.map(function(element, index, array) {
                return element.marker;
            })
        }

        function resetMarkers() {
            var markers = getMarkers();
            for (var i = 0; i < markers.length; i++) {
                if (markers[i] !== undefined)
                    markers[i].setOpacity(0.5);
            }
        }

        function deleteMarkers() {
            for(var i=0;i<markers.length;i++) {
                markers[i].setMap(null);
                circles[i].setMap(null);
            }
            markers = [];
            circles = [];
        }
    </script>
